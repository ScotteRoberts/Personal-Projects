{
  "author": "Scott Roberts",
  "background": {
    "scripts": ["./src/scripts/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "./src/templates/chrome-extension-popup.html",
    "default_icon": {
      "16": "img/toolbar-icons/like16.png",
      "32": "img/toolbar-icons/like32.png",
      "128": "img/toolbar-icons/like128.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "./src/templates/index.html"
  },
  "description": "Let's build something fun!",
  "icons": {
    "16": "img/toolbar-icons/like16.png",
    "32": "img/toolbar-icons/like32.png",
    "128": "img/toolbar-icons/like128.png"
  },
  "manifest_version": 2,
  "name": "Momentum Clone Chrome Extension ",
  "options_page": "./src/templates/chrome-extension-options.html",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "short_name": "Momentum Clone",
  "version": "1.0"
}
